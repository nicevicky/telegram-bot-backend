{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept, Authorization, X-API-Key"
        }
      ]
    }
  ],
  "env": {
    "API_SECRET_KEY": "telegram-bot-api-key-runner",
    "ALLOWED_ORIGINS": "http://botcreator.iceiy.com",
    "WEBHOOK_SECRET": "telegram-bot-api-key-runner"
  }
}
